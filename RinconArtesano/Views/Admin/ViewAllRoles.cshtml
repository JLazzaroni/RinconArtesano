@model IEnumerable<RinconArtesano.Models.RoleViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Añadir Rol", "AddRole", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Roles
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @if (item.RoleName.ToLower() != "administrador")
                {
                    @Html.ActionLink("Eliminar", "DeleteUserRole", new { RoleName = item.RoleName }, new {
                       onclick = "return confirm('¿Esta seguro que desea eliminar este Rol?');",
                       @class = "btn btn-danger"
                   })
                }
            </td>
        </tr>
    }
</table>

