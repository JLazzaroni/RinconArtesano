@using Datos
@{
    AspNetUsers u = ViewBag.InfoUsuario;

}

<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <div class="profile-userpic">
                    <img src="@Url.Content(@u.UsersInfo.FilePath)" class="img-responsive" alt="">
                </div>
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        @u.UserName
                    </div>
                    <div class="profile-usertitle-job">
                        <ul style="list-style-type: none; padding-left: 0px;">
                            @foreach (var item in u.AspNetRoles)
                            {
                                <li>
                                    @item.Name
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li class="active">
                            <a href="@Url.Action("Index", "Manage")">
                                <i class="glyphicon glyphicon-home"></i>
                                Perfil
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("Edit", "UsersInfo", new { id = @u.Id })">
                                <i class="glyphicon glyphicon-user"></i>
                                Editar Perfil
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangePassword", "Manage")">
                                <i class="glyphicon glyphicon-wrench"></i>
                                Cambiar contraseña
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="profile-content">
                <div class="form-horizontal">
                    <h4>Perfil</h4>
                    <hr />
                    <div class="row">


                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Nombre, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Apellido, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Apellido, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.FechaNacimiento, "Nacio" , htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.FechaNacimiento, "dd/MM/yyyy", new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Edad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Edad, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Sexo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Sexo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.DateAdd, htmlAttributes: new { @class = "control-label col-md-2", value = "Fecha creación" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.DateAdd, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Pais, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Pais, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Provincia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Provincia, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Localidad, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Localidad, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Direccion, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Direccion, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Telefono, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Intereses, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Intereses, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style="max-width:90%" } })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                @Html.LabelFor(model => u.UsersInfo.Rubro, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => u.UsersInfo.Rubro, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", style = "max-width:90%" } })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<br>
