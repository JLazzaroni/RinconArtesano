@using Datos;
@model IEnumerable<ProductsCategories>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>
    @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Añadir Categoría", "AddCategory", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            Categorías
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCategoryDescriptions)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditCategory", new { ProductCategoryId = item.ProductCategoryId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Eliminar", "DeleteCategory", new { ProductCategoryId = item.ProductCategoryId }, new
               {
                   onclick = "return confirm('¿Esta seguro que desea eliminar estea categoría?');",
                   @class = "btn btn-danger"
               })
            </td>
        </tr>
    }
</table>

