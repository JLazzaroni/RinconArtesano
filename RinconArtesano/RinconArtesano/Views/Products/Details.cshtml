    </div>
    @if (!Model.DateNull.HasValue)
    {
        <p>

            @Html.ActionLink("Editar", "Edit", new { id = Model.ProductId }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Volver", "Index")
        </p>
    }
    else
    {
        <p>
            @Html.ActionLink("Volver", "Index")
        </p>
    }
</body>
