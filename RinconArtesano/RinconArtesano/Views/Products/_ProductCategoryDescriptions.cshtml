@model List<RinconArtesano.Models.ProductsCategories>

<div id="modalProductCategoryDescriptions" class="modal fade modalProductCategoryDescriptions" draggable="true" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="left: 0%;">
        <div class="modal-content">
            <div class="modal-header form__titulo">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title">Categorías</h4>
            </div>
            <div class="modal-body">
                @if (@Model.Count() > 0)
                {
                    foreach (ProductsCategories x in @Model)
                    {
                        <p><u>@x.ProductCategoryName</u>: @x.ProductCategoryDescriptions</p>
                    }
                }
            </div>
        </div>
    </div>
</div>

